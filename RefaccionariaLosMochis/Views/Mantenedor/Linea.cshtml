
@{
    ViewBag.Title = "Linea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/CssUsuarios/UsuariosRegistros.css" rel="stylesheet" />

<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Linea</li>
</ol>


<div id="cardRegistros" class=" mb-5">
    <div class="container">
        <div class="row mx-5 my-3 bg-secondary py-2 rounded-3 barraHerramientas">

            <div class="container my-3 col-auto">
                <div class="row justify-content-between">
                    <div class="col-auto d-flex align-items-baseline ">

                        <div id="buscador">
                            <div class="input-group rounded-2 bg-primary">
                                <input id="txtBusquedaNuevo" type="text" class="form-control" placeholder="Buscar..." autocomplete="off">
                                <button id="botonBuscar" class="btn btn-outline-secondary" type="button">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                            <div id="opcionesListaAbajo" class="autocomplete-options" style="display: none;">
                            </div>
                            <div id="opcionesLista" class="autocomplete-options" style="display: none;">
                            </div>
                        </div>

                        <br />

                    </div>
                </div>
            </div>



            <div class="d-flex justify-content-center align-items-center col-8">
                <div class="bg-light rounded-2 m-2 h-50">
                    <button id="btn-Nuevo" type="button" class="btn btn-primary btn-custom w-100 h-100"><i class="fas fa-plus"></i> Nuevo</button>
                </div>
                <div class="bg-light rounded-2 m-2 h-50">
                    <button id="btn-Eliminar" type="button" class="btn btn-danger btn-custom w-100 h-100"><i class="fas fa-trash"></i> Eliminar</button>
                </div>

            </div>


        </div>

    </div>

    <div class="container-fluid ">
        <div class=" row">
            <div class="col-6">
                <div class="row  w-100 my-3" id="">
                    <div class="col-auto">
                        <label class=" form-label h3 fw-bold">Identificador</label>
                    </div>
                    <div class="col-6">
                        <input id="txtRegistroid" class="form-control" type="number" value="0" placeholder="AutoNumerico" disabled>
                    </div>
                </div>

                <div class="row  w-100 my-3" id="">
                    <div class="col-auto">
                        <label class="form-label h3 fw-bold ">Nombre</label>
                    </div>
                    <div class="col-7">
                        <input id="txtRegistroNombre" class="form-control" type="text" data-requerido="Nombre" />
                    </div>
                </div>



                <div class="row  w-100 my-3" id="">
                    <div class="col-auto">
                        <label class="form-label h3 fw-bold">Activo</label>
                    </div>
                    <div class="col-7">
                        <select class="form-select " id="cboRegistroActivo">
                            <option value="A">Activo</option>
                            <option value="D">Desactivo</option>
                            <option value="O">Oculto</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="col-6">

                <div class="row  w-100 my-3" id="">
                    <label class="form-label h3 fw-bold">Descripcion</label>

                    <textarea id="txtRegistrodescripcion" class="form-control" type="text" style=" height: 200px; " data-requerido="Descripcion "></textarea>
                </div>

            </div>
        </div>



        <div class="row mt-2">
            <div class="col-12">
                <div id="mensajeError" class="alert alert-danger" role="alert" style="display: none;">
                </div>

            </div>
        </div>
        <hr />
        <div class=" d-flex justify-content-end">
            <button disabled id="btn-Guardar" type="button" class="btn btn-success btn-sm  mx-2"><i class="fas fa-play"></i> Guardar</button>
            <button id="btn-Cancelar" type="button" class="btn btn-secondary btn-sm btn-custom mx-2 "><i class="fas fa-times"></i> Cancelar</button>
        </div>
    </div>
</div>
<hr />
<div class="container m-3 p-5">
    <div class="card ">

        <div class="card-header">
            <div class="row">
                <div class="col-12">
                    <label class="h3 fw-bold align-items-center">Filtros De Lineas</label>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row d-flex">
                <div class="form-check form-switch">
                    <label class="form-check-label">Filtros de la Tabla</label>
                    <input id="checkFiltros" class="form-check-input" type="checkbox" role="switch" />
                </div>

            </div>
            <div id="filtroslinea" class="row" hidden>
                <hr class=" my-4" />


                <div class="col-4">
                    <div class="form-check">
                        <label class="form-check-label">Filtros por ID</label>
                        <input value="ID" checked name="grupoFiltros" id="checkFiltroId" class="form-check-input filtro-checkbox" type="radio" role="switch" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-check ">
                        <label class="form-check-label">Filtros por Descripcion</label>
                        <input value="Descripcion" name="grupoFiltros" id="checkFiltroDescripcion" class="form-check-input filtro-checkbox" type="radio" role="switch" />
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-check ">
                        <label class="form-check-label">Filtros por Descripcion Linea</label>
                        <input value="Descripcion Linea" name="grupoFiltros" id="checkFiltroDescripcionLinea" class="form-check-input filtro-checkbox" type="radio" role="switch" />
                    </div>
                </div>

                <div class="row my-3">

                    <div class="col-6">
                        <div class="row">
                            <div class="col-auto">
                                <label id="buscadorFiltroTabla" class="form-label">ID</label>
                            </div>
                            <div class="col-6">
                                <input id="txtFiltroWhere" type="text"  class="form-control" placeholder="Buscar en la Tabla...."/>
                            </div>
                        </div>
                    </div>


                    <div class="col-auto">
                        <buton id="btn-buscarTabla" class="btn btn-success d-flex "><a href="#tabla" class="text-decoration-none text-white"><i class="fas fa-search m-auto me-2"></i> Buscar</a></buton>

                    </div>
                </div>


            </div>
        </div>
    </div>

</div>



<div class="card">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>Lista de Lineas

    </div>


    <div class="card-body ">
        <div class="row h3 fw-bolder text-center">
            <label class="text-center col-11"> Registros de Lineas</label>
            <div class="d-flex justify-content-end col-auto">
                <button id="btn-Actualizar" type="button" class="btn btn-primary btn-sm  mx-2 "><i class="fas fa-sync"></i> </button>
            </div>

        </div>
        <div class="row py-2">
            <div class="d-flex justify-content-center m-auto col-5  mx-5 ">
                <div id="paginadoTabla">

                </div>
            </div>

            <div class="d-flex justify-content-center col-5 ">
                <input type="text" class="form-control mx-3 " placeholder="Buscar en la Tabla...." />
                <buton class="btn btn-success d-flex "><i class="fas fa-search m-auto me-2"></i> Buscar</buton>


            </div>

        </div>
        <hr />

        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr id="trowTabla">
                    <th id="tablaId">ID</th>
                    <th id="tablaDescripcion">Descripcion</th>
                    <th>Activo</th>
                    <th>Descripcion de la Linea</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/Pruebas/jquery.bootstrap.autocomplete.js"></script>
    <script src="~/Scripts/Linea/LineaJS.js"></script>

}

